---
interface Props {
  article: {
    slug: string;
    data: {
      title: string;
      date: Date;
      categories?: string[];
      coverImage?: string;
      excerpt?: string;
      readTime?: string;
    };
  };
  featured?: boolean;
}

const { article, featured = false } = Astro.props;
const { title, date, categories, coverImage, excerpt, readTime } = article.data;

const formattedDate = new Date(date).toLocaleDateString('pt-BR', {
  day: 'numeric',
  month: 'short',
  year: 'numeric'
});

const imageUrl = coverImage
  ? coverImage.startsWith('http')
    ? coverImage
    : `/images/${coverImage}`
  : 'https://images.unsplash.com/photo-1677442136019-21780ecad995?auto=format&fit=crop&q=80&w=800';
---

<a href={`/article/${article.slug}`} class:list={['article-card', { featured }]}>
  <div class="card-image">
    <img
      src={imageUrl}
      alt={title}
      loading="lazy"
      decoding="async"
    />
    <div class="card-overlay"></div>
  </div>
  <div class="card-content">
    <div class="card-meta">
      {categories?.[0] && (
        <span class="card-category">{categories[0]}</span>
      )}
      <span class="card-date">{formattedDate}</span>
    </div>
    <h3 class="card-title">{title}</h3>
    {excerpt && <p class="card-excerpt">{excerpt}</p>}
    <div class="card-footer">
      <span class="read-more">
        Ler artigo
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </span>
      {readTime && <span class="read-time">{readTime}</span>}
    </div>
  </div>
</a>

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    background: white;
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    text-decoration: none;
    height: 100%;
  }

  .article-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px -15px rgba(51, 99, 255, 0.2);
    border-color: var(--primary);
  }

  .card-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .article-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.4) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .article-card:hover .card-overlay {
    opacity: 1;
  }

  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .card-category {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--primary);
    background: var(--primary-light);
    padding: 4px 10px;
    border-radius: var(--radius-full);
  }

  .card-date {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.4;
    color: var(--text-main);
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.3s ease;
  }

  .article-card:hover .card-title {
    color: var(--primary);
  }

  .card-excerpt {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 1rem;
    flex: 1;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--border-light);
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--primary);
    transition: gap 0.3s ease;
  }

  .article-card:hover .read-more {
    gap: 10px;
  }

  .read-time {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  /* Featured variant */
  .article-card.featured {
    grid-column: span 2;
  }

  .article-card.featured .card-image {
    height: 300px;
  }

  .article-card.featured .card-title {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .article-card.featured {
      grid-column: span 1;
    }

    .article-card.featured .card-image {
      height: 200px;
    }

    .article-card.featured .card-title {
      font-size: 1.1rem;
    }
  }
</style>
