---
interface Category {
  name: string;
  slug: string;
  count?: number;
}

interface Props {
  categories: Category[];
  activeCategory?: string;
  showAll?: boolean;
}

const { categories, activeCategory, showAll = true } = Astro.props;

// Category color mapping
const categoryColors: Record<string, string> = {
  marketing: 'var(--cat-marketing)',
  vendas: 'var(--cat-vendas)',
  gestao: 'var(--cat-gestao)',
  tecnologia: 'var(--cat-tecnologia)',
  estrategia: 'var(--cat-estrategia)',
  empreendedorismo: 'var(--cat-empreendedorismo)',
  produtividade: 'var(--cat-produtividade)',
  lideranca: 'var(--cat-lideranca)',
  inovacao: 'var(--cat-inovacao)',
  financas: 'var(--cat-financas)',
};

function getCategoryColor(slug: string): string {
  return categoryColors[slug.toLowerCase()] || 'var(--cat-default)';
}
---

<div class="category-chips">
  <div class="chips-container">
    {showAll && (
      <a
        href="/"
        class:list={['chip', { active: !activeCategory }]}
        data-category="all"
      >
        <span class="chip-text">Todos</span>
      </a>
    )}

    {categories.map((cat) => (
      <a
        href={`/categoria/${cat.slug}`}
        class:list={['chip', { active: activeCategory === cat.slug }]}
        data-category={cat.slug}
        style={`--chip-color: ${getCategoryColor(cat.slug)}`}
      >
        <span class="chip-text">{cat.name}</span>
        {cat.count !== undefined && (
          <span class="chip-count">{cat.count}</span>
        )}
      </a>
    ))}
  </div>
</div>

<style>
  .category-chips {
    position: relative;
    padding: var(--space-4) 0;
    margin: calc(-1 * var(--space-4));
    margin-bottom: var(--space-6);
  }

  .chips-container {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: 0 var(--space-4);
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  .chips-container::-webkit-scrollbar {
    display: none;
  }

  /* Fade edges on scroll */
  .category-chips::before,
  .category-chips::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 24px;
    pointer-events: none;
    z-index: 1;
  }

  .category-chips::before {
    left: 0;
    background: linear-gradient(to right, var(--bg-primary), transparent);
    opacity: 0;
  }

  .category-chips::after {
    right: 0;
    background: linear-gradient(to left, var(--bg-primary), transparent);
  }

  .chip {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--text-secondary);
    background: var(--bg-secondary);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-full);
    text-decoration: none;
    white-space: nowrap;
    transition: all var(--transition-fast);
    cursor: pointer;
  }

  .chip:hover {
    color: var(--chip-color, var(--color-primary-600));
    background: color-mix(in srgb, var(--chip-color, var(--color-primary-500)) 10%, transparent);
    border-color: var(--chip-color, var(--color-primary-300));
  }

  .chip.active {
    color: white;
    background: var(--chip-color, var(--color-primary-500));
    border-color: var(--chip-color, var(--color-primary-500));
  }

  .chip-text {
    text-transform: capitalize;
  }

  .chip-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 var(--space-1);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    background: rgba(0, 0, 0, 0.1);
    border-radius: var(--radius-full);
  }

  .chip.active .chip-count {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (min-width: 768px) {
    .category-chips {
      margin: 0;
      margin-bottom: var(--space-8);
    }

    .chips-container {
      flex-wrap: wrap;
      padding: 0;
      overflow-x: visible;
    }

    .category-chips::before,
    .category-chips::after {
      display: none;
    }

    .chip {
      padding: var(--space-2) var(--space-5);
    }
  }
</style>
