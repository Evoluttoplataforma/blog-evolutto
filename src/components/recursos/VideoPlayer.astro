---
import { getEmbedUrl } from '../../data/freeResources';

interface Props {
  videoUrl: string;
  title: string;
}

const { videoUrl, title } = Astro.props;
const embedUrl = getEmbedUrl(videoUrl);
---

<div class="video-player">
  <div class="video-wrapper">
    <iframe
      src={embedUrl}
      title={title}
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
      loading="lazy"
    ></iframe>
  </div>
</div>

<style>
  .video-player {
    width: 100%;
    margin-bottom: 32px;
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: 12px;
    background: #0f172a;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  @media (max-width: 640px) {
    .video-wrapper {
      border-radius: 8px;
    }
  }
</style>
