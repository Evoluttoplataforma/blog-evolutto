---
import BlogLayout from '../../../layouts/BlogLayout.astro';
import ResourceHero from '../../../components/recursos/ResourceHero.astro';
import ResourceGrid from '../../../components/recursos/ResourceGrid';
import { resourcePageConfigs } from '../../../data/freeResources';
import { getFreeTools } from '../../../data/freeTools';

const config = resourcePageConfigs.ferramentas;
const resources = getFreeTools();

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Recursos Gratuitos', href: '/recursos-gratuitos' },
  { label: 'Ferramentas Gratuitas' },
];
---

<BlogLayout
  title="Ferramentas Gratuitas"
  description={config.description}
  currentPath="/recursos-gratuitos/ferramentas-gratuitas"
>
  <ResourceHero
    breadcrumbs={breadcrumbs}
    eyebrow={config.eyebrow}
    title={config.title}
    description={config.description}
    ctaPrimary={config.ctaPrimary}
    ctaSecondary={config.ctaSecondary}
    heroImage={config.heroImage}
  />

  <ResourceGrid
    client:load
    resources={resources}
    categories={config.categories}
    basePath={config.basePath}
  />
</BlogLayout>
