        </header>

        <!-- Article Content -->
        <div class="article-content prose">
          <Content />
        </div>
      </main>

      <!-- Sidebar -->
      <aside class="article-sidebar">
          <div class="sidebar-sticky">
            <!-- Next Live Card -->
            <NextLiveCard />

            <!-- CTA Box with Modal -->
            <SidebarCTA
