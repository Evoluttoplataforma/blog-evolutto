---
import { getCollection } from 'astro:content';
import BlogLayout from '../layouts/BlogLayout.astro';
import PostCard from '../components/blog/PostCard.astro';
import SidebarCTA from '../components/blog/SidebarCTA.jsx';
import NextLiveCard from '../components/blog/NextLiveCard.astro';

// Generate static paths for pages (priority) and blog posts
export async function getStaticPaths() {
  const pages = await getCollection('pages');
  const posts = await getCollection('blog');

  // Create a Set of page slugs to avoid duplicates
  const pageSlugs = new Set(pages.map((page) => page.slug));

  // Map pages with type identifier
  const pagePaths = pages.map((page) => ({
    params: { slug: page.slug },
    props: { entry: page, type: 'page' as const },
  }));

  // Map blog posts, excluding any that would conflict with pages
  const blogPaths = posts
    .filter((post) => !pageSlugs.has(post.slug))
    .map((post) => ({
      params: { slug: post.slug },
      props: { entry: post, type: 'blog' as const },
    }));

  return [...pagePaths, ...blogPaths];
}

const { entry, type } = Astro.props;
const post = entry; // Alias for backward compatibility in blog template
const { Content } = await entry.render();

// Helper to get full image URL
function getImageUrl(image?: string): string | undefined {
  if (!image) return undefined;
  if (image.startsWith('http') || image.startsWith('/')) return image;
  return `/images/${image}`;
}

// Blog-specific logic (only runs for blog posts)
let relatedPosts: Array<{
  title: string;
  slug: string;
  excerpt: string;
  coverImage: string | undefined;
  category: string;
  categorySlug: string;
  date: Date;
  readTime: string | number;
}> = [];
let category = 'Geral';
let categorySlug = 'geral';
let catColor = 'var(--cat-default)';

if (type === 'blog') {
  // Get all posts for related articles
  const allPosts = await getCollection('blog');
  const sortedPosts = allPosts.sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  });

  // Get related posts (same category, excluding current)
  const currentCategories = post.data.categories || [];
  relatedPosts = sortedPosts
    .filter((p) => {
      if (p.slug === post.slug) return false;
      const postCats = p.data.categories || [];
      return postCats.some((cat: string) => currentCategories.includes(cat));
    })
    .slice(0, 3)
    .map((p) => ({
      title: p.data.title,
      slug: p.slug,
      excerpt: p.data.excerpt || (p.data as any).description || '',
      coverImage: getImageUrl(p.data.coverImage || (p.data as any).image),
      category: p.data.categories?.[0] || 'Geral',
      categorySlug: p.data.categories?.[0]?.toLowerCase().replace(/\s+/g, '-') || 'geral',
      date: p.data.date,
      readTime: p.data.readTime || 5,
    }));

  category = post.data.categories?.[0] || 'Geral';
  categorySlug = category.toLowerCase().replace(/\s+/g, '-');

  // Category colors
  const categoryColors: Record<string, string> = {
    marketing: 'var(--cat-marketing)',
    vendas: 'var(--cat-vendas)',
    gestao: 'var(--cat-gestao)',
    tecnologia: 'var(--cat-tecnologia)',
    estrategia: 'var(--cat-estrategia)',
    empreendedorismo: 'var(--cat-empreendedorismo)',
    produtividade: 'var(--cat-produtividade)',
    lideranca: 'var(--cat-lideranca)',
    inovacao: 'var(--cat-inovacao)',
    financas: 'var(--cat-financas)',
    digitalizacao: 'var(--cat-tecnologia)',
    escala: 'var(--cat-estrategia)',
    produtizacao: 'var(--cat-produtividade)',
  };

  catColor = categoryColors[categorySlug] || 'var(--cat-default)';
}

// Get current post cover image
const postCoverImage = getImageUrl(entry.data.coverImage || (entry.data as any).image);

// Format date
const formattedDate = entry.data.date
  ? new Intl.DateTimeFormat('pt-BR', {
      day: 'numeric',
      month: 'long',
      year: 'numeric',
    }).format(new Date(entry.data.date))
  : null;
---

{type === 'page' && (
  <BlogLayout
    title={entry.data.title}
    description={entry.data.excerpt}
    image={postCoverImage}
    article={false}
    currentPath={`/${entry.slug}`}
  >
    <article class="page-content">
      <div class="page-container">
        <div class="page-body prose">
          <Content />
        </div>
      </div>
    </article>
  </BlogLayout>
)}

{type === 'blog' && (
  <BlogLayout
    title={post.data.title}
    description={post.data.excerpt || (post.data as any).description}
    image={postCoverImage}
    article={true}
    publishedTime={post.data.date?.toISOString()}
    currentPath={`/${post.slug}`}
  >
    <article class="article-page" style={`--cat-color: ${catColor}`}>
      <div class="article-layout">
        <main class="article-main">
          <header class="article-header">
            <div class="header-top">
              <a href={`/categoria/${categorySlug}`} class="article-category">
                {category}
              </a>
              {formattedDate && (
                <>
                  <span class="header-separator">|</span>
                  <span class="article-date">{formattedDate}</span>
                </>
              )}
            </div>

            <h1 class="article-title">{post.data.title}</h1>

            <div class="header-meta">
              {post.data.author && (
              <div class="meta-author">
                <div class="author-avatar">
                  {post.data.authorImage ? (
                    <img src={post.data.authorImage} alt={post.data.author} />
                  ) : (
                    <span>{post.data.author.charAt(0)}</span>
                  )}
                </div>
                <span class="author-name">{post.data.author}</span>
              </div>
            )}
            {post.data.readTime && (
              <span class="meta-read-time">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                {post.data.readTime} min
